@model IEnumerable<StudentData.Core.Model.Studentmodel>
@{
    int i = 0;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <svg xmlns="http://www.w3.org/2000/svg" width="10%" height="10%" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664z" />
    </svg>
</head>
<body>
    <i class="bi bi-person"></i><br/>
    <button type="submit" class="btn btn-default" onclick="FnCreateStudent()" style="background-color:green;color:white;margin:20px;margin-left:0%;">Add student</button>
    <table id="example" class="table table-striped" style="width:100%;">
        <thead >
            <tr >
                <th>SNo</th>
                <th>Name</th>
                <th>DOB</th>
                <th>Gender</th>
                <th>Contact number</th>
                <th>Email ID</th>
                <th style="text-align:center;">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {

                i++;
                <tr>
                    <td>@i.</td>
                    <td>@item.StudentName</td>
                    <td>@item.DOB</td>
                    <td>@item.Gender</td>
                    <td>@item.ContactNumber</td>
                    <td>@item.Email</td>
                    <td style="text-align:center;">
                        <i class="fa fa-pencil" style="font-size:24px;color:blue;" onclick="Edit(@item.StudentId)"></i>
                        <i class="fa fa-trash-o" style="font-size:24px;margin:10px;color:red" onclick="Delete(@item.StudentId)"></i>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>


<script>
    new DataTable('#example');
    function FnCreateStudent() {
        location.href = "/Student/SaveandUpdateStudentDetails/";
    }
    $(document).ready(function () {
        $('#example').DataTable();
    });
    function Delete(id) {
        if (confirm("do you want Delete this fields")) {
            location.href = "/Student/Delete/" + id;
        }
    }
    function Edit(id) {
        if (id > 0) {
            location.href = "/Student/SaveandUpdateStudentDetails/" + id;
        }
    }
</script>
